<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btAtivar"
        android:layout_width="164dp"
        android:layout_height="48dp"
        android:text="Ativar HotSpot"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/btDesativar"
        app:layout_constraintHorizontal_bias="0.231"
        app:layout_constraintStart_toStartOf="@+id/btDesativar"
        app:layout_constraintTop_toBottomOf="@+id/btDesativar"
        app:layout_constraintVertical_bias="0.164" />

    <Button
        android:id="@+id/btDesativar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="166dp"
        android:text="Desativar HotSpot"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.59"
        app:layout_constraintStart_toEndOf="@+id/edPlaca"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/edPlaca"
        android:layout_width="232dp"
        android:layout_height="49dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="36dp"
        android:hint="placa"
        android:text="AAA0001"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edSenha"
        android:layout_width="224dp"
        android:layout_height="45dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="44dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="senha"
        android:text="12345678"
        app:layout_constraintEnd_toEndOf="@+id/edPlaca"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edPlaca" />

</androidx.constraintlayout.widget.ConstraintLayout>